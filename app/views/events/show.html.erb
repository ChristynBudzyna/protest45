 <div class="container">

<div class="event-info-holder">
 <p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-3">
      <% if @event.picture_url != "" %>
      <img src= <%= @event.picture_url %> />
    <% else %>
      <img src="http://placehold.it/200/09f/fff.png">
    <% end %>
  </div>
    <div class="col-md-5 event-details">
      <h3 class="event-title"><%= link_to @event.title, @event %></h3>
      <p><%= @event.datetime.strftime("%A, %B %e - %m:%M%p") %></p>
      <p> <span><%= @event.address1 %> <%= @event.address2 %> </span>
        <span><%= @event.city %></span>,<span> <%= @event.state %></span><span> <%= @event.zip %> </span></p>
      <p>
        <strong>Description:</strong>
        <%= @event.description %>
      </p>


<% if current_user && current_user.admin? %>
  <p>
    <strong>approved:</strong>
    <%= @event.approved %>
  </p>

<p>
  <strong>Event Creator:</strong>
  <%if @event.user.name%>
    <%= @event.user.name %>
  <%else%>
    No Name Provided
  <%end%>
</p>

<% end %>

<%@event.tags.each do |tag|%>
    <div class="chip">
      <%=tag.name%>
    </div>
<% end %>

<p>
<% if current_user && (@event.created_by?(current_user) || current_user.admin?) %>
<%= link_to 'Edit', edit_event_path(@event) %>
<% end %> | <%= link_to 'Back To Home', events_path %>
</p>

</div>
    <div class="col-md-1">
      <% if @event.url != "" %>
        <%= link_to 'go >', @event.url, class: "go"%>
      <% end %>


    </div>
  </div>
</div>

</div>

</div>
